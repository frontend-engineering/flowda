{
  "name": "theia-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/theia-plugin/src",
  "projectType": "library",
  "targets": {
    "dev": {
      "executor": "@flowda/nx-plugin:dev",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/theia-plugin",
        "bundleDts": false,
        "assets": [
          {
            "input": "./libs/theia-plugin/data",
            "glob": "**/*.json",
            "output": "./data"
          },
          {
            "input": "./libs/theia-plugin/src/browser/style",
            "glob": "**/*",
            "output": "./src/browser/style"
          },
          {
            "input": "./libs/theia-plugin/src/browser/icons",
            "glob": "**/*",
            "output": "./src/browser/icons"
          }
        ]
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/theia-plugin",
        "main": "libs/theia-plugin/src/index.ts",
        "tsConfig": "libs/theia-plugin/tsconfig.lib.json",
        "assets": [
          "libs/theia-plugin/*.md",
          {
            "input": "./libs/theia-plugin/data",
            "glob": "**/*.json",
            "output": "./data"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/theia-plugin/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/theia-plugin/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
